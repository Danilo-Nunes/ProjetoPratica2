
@{
    ViewBag.Title = "Comunicado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Estilos/Comunicado.css" rel="stylesheet" />
<div class="comunicado">
    @{
        var base64Prof = Convert.ToBase64String(ViewBag.Professor.Img);
        var imgSrcProf = String.Format("data:image/gif;base64,{0}", base64Prof);
    }
    <p class="nome">@ViewBag.Sala.Nome</p>
    <img class="img" src="@imgSrcProf" style=" position: absolute;
                            border: 5px solid midnightblue;
                            float: left;
                            left: 2%;
                            top: 14%;
                            background-size: cover;
                            background-repeat: no-repeat;
                            max-width: 250px;
                            min-width: 250px;
                            max-height: 250px;
                            min-height: 250px;
                            transition: 0.2s;">
    <div class="entregar">Entregar</div>
    <div class="voltar" onclick="location.href='/Home/Sala/@ViewBag.Sala.Id'"></div>
    <div class="interno">
        <p class="professor">Professor: @ViewBag.Professor.Nome</p>
        <p class="descricao">@ViewBag.Comunicado.Texto</p>
    </div>
</div>

