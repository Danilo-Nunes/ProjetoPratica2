
@{
    ViewBag.Title = "CriarAtividade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Estilos/CriarAtividade.css" rel="stylesheet" />
<div class="criacao">
    <img class="img" onclick="imagemSala()" src='../img/classe.jpeg'>
    <div class="enviar" title="Enviar Comunicado" onclick="enviar()"><i class="fas fa-paper-plane"></i></div>
    <div class="adicionar" title="Adicionar Arquivo" id="add"><i class="fas fa-folder-plus" id="i"></i></div>
    <div class="cancelar" onclick="cancelar()"><i class="far fa-times-circle"></i></div>
    <div class="interno">
        <p class="titulop">Atividade: </p><input type="text" class="titulo">
        <p class="pesop">Peso: </p><input type="text" class="peso">
        <p class="comunicadop">Comunicado: </p><textarea class="comunicado"></textarea>
    </div>
</div>

